{
  "manifest_version": 3,
  "name": "Taobao Product Detail Fetcher",
  "version": "1.0",
  "description": "Fetch product details from Taobao",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-64.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "tabs",
    "bookmarks",
    "storage",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "css": [
        "style.css"
      ],
      "matches": [
        "https://item.taobao.com/item.htm*",
        "https://detail.tmall.com/item.htm*",
        "http://localhost:3000/*"
      ],
      "js": [
        "scripts/content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "externally_connectable": {
    "matches": [
      "https://api.mby.vn/*"
    ]
  },
  "host_permissions": [
    "https://api.mby.vn/*"
  ]
}